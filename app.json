{
  "expo": {
    "name": "RapidoIndoorNav",
    "slug": "RapidoIndoorNav",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.RapidoIndoorNav",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to guide you with AR navigation.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app always needs your location to guide you indoors using AR, even when active in the background."
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow RapidoIndoorNav to use your location."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
